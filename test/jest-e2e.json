{
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": "./e2e",
	"testEnvironment": "node",
	"testRegex": ".e2e-spec.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"moduleNameMapper": {
		"^@app/shared(|/.*)$": "<rootDir>../../../libs/shared/src/$1"
	},
  "forceExit": true,
  "maxConcurrency": 1,
  "detectOpenHandles": true,
	"testTimeout": 60000
}